extends ../layouts/common
block content
    .d-flex.align-items-center
        form.ml-auto(method="GET" class="d-flex")
            input(type="text" name="q" class="form-control")
            button(class="btn btn-primary ml-2") Search

    .row
        each product in products
            .col-sm-6.col-md-4.col-lg-3
                .card.mb-3
                    img.card-img-top(src=product.image, alt='My product')
                    .card-body
                        h5.card-title= product.name
                        p.card-text= product.description
                        a.btn.btn-primary(href='#') Thêm vào giỏ hàng

    nav(aria-label='Page navigation products')
        ul.pagination.justify-content-center
            li.page-item
                a.page-link(href='#') Previous
            - let i = 0
                while i <= allProducts.length / 8
                    li.page-item
                        a.page-link(href='/products/discover?page=' + (i + 1))= i + 1
                    -i++
            li.page-item
                a.page-link(href='#') Next